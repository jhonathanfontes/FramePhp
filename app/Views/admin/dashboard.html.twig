    <script>
        // Animar barras do gr√°fico
        function animarGrafico() {
            const barras = document.querySelectorAll('.chart-bar');
            barras.forEach((barra, index) => {
                setTimeout(() => {
                    barra.style.opacity = '0';
                    barra.style.transform = 'scaleY(0)';
                    
                    setTimeout(() => {
                        barra.style.transition = 'all 0.5s ease';
                        barra.style.opacity = '1';
                        barra.style.transform = 'scaleY(1)';
                    }, 100);
                }, index * 100);
            });
        }
        
        // Atualizar dados em tempo real
        function atualizarDashboard() {
            // Aqui voc√™ pode implementar atualiza√ß√µes em tempo real
            console.log('Dashboard atualizado');
        }
        
        // Inicializar
        document.addEventListener('DOMContentLoaded', function() {
            animarGrafico();
            
            // Atualizar a cada 30 segundos
            setInterval(atualizarDashboard, 30000);
        });
        
        // Tooltip para barras do gr√°fico
        document.querySelectorAll('.chart-bar').forEach(barra => {
            const valor = barra.getAttribute('data-value');
            barra.addEventListener('mouseenter', function() {
                this.style.transform = 'scaleY(1.1)';
            });
            
            barra.addEventListener('mouseleave', function() {
                this.style.transform = 'scaleY(1)';
            });
        });
    </script>
