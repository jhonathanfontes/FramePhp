{% extends "admin/layout.html.twig" %}

{% block title %}{{ usuario ? 'Editar' : 'Novo' }} Usuário - Admin{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Header da página -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">{{ usuario ? 'Editar' : 'Novo' }} Usuário</h1>
            <p class="text-muted mb-0">{{ usuario ? 'Edite as informações do usuário' : 'Cadastre um novo usuário no sistema' }}</p>
        </div>
        <div>
            <a href="{{ url('admin.usuarios') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    <!-- Formulário -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-circle"></i>
                        Informações do Usuário
                    </h5>
                </div>
                <div class="card-body">
                    <form id="formUsuario" method="POST" action="{{ url('admin.usuario_salvar') }}">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                        {% if usuario %}
                            <input type="hidden" name="id" value="{{ usuario.id }}">
                        {% endif %}
                        
                        <!-- Informações Básicas -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="nome" class="form-label">Nome Completo *</label>
                                    <input type="text" class="form-control" id="nome" name="nome" 
                                           value="{{ usuario ? usuario.nome : '' }}" required
                                           placeholder="Digite o nome completo">
                                    <div class="invalid-feedback">
                                        Por favor, informe o nome completo.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email *</label>
                                    <input type="email" class="form-control" id="email" name="email" 
                                           value="{{ usuario ? usuario.email : '' }}" required
                                           placeholder="Digite o email">
                                    <div class="invalid-feedback">
                                        Por favor, informe um email válido.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Senha -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="senha" class="form-label">
                                        Senha {{ usuario ? '(deixe em branco para manter)' : '*' }}
                                    </label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" id="senha" name="senha" 
                                               {{ not usuario ? 'required' : '' }}
                                               placeholder="{{ usuario ? 'Deixe em branco para manter' : 'Digite a senha' }}">
                                        <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('senha')">
                                            <i class="bi bi-eye" id="icon-senha"></i>
                                        </button>
                                    </div>
                                    <div class="form-text">
                                        {% if usuario %}
                                            Deixe em branco para manter a senha atual
                                        {% else %}
                                            Mínimo 6 caracteres
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="confirmarSenha" class="form-label">
                                        Confirmar Senha {{ usuario ? '(opcional)' : '*' }}
                                    </label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" id="confirmarSenha" name="confirmarSenha" 
                                               {{ not usuario ? 'required' : '' }}
                                               placeholder="{{ usuario ? 'Confirme a nova senha' : 'Confirme a senha' }}">
                                        <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('confirmarSenha')">
                                            <i class="bi bi-eye" id="icon-confirmarSenha"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Configurações -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="tipoAcesso" class="form-label">Tipo de Acesso *</label>
                                    <select class="form-select" id="tipoAcesso" name="tipoAcesso" required>
                                        <option value="">Selecione o tipo de acesso...</option>
                                        <option value="admin" {{ usuario and usuario.tipoAcesso == 'admin' ? 'selected' : '' }}>
                                            Administrador
                                        </option>
                                        <option value="gerente" {{ usuario and usuario.tipoAcesso == 'gerente' ? 'selected' : '' }}>
                                            Gerente
                                        </option>
                                        <option value="usuario" {{ usuario and usuario.tipoAcesso == 'usuario' ? 'selected' : '' }}>
                                            Usuário
                                        </option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Por favor, selecione o tipo de acesso.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="status" class="form-label">Status *</label>
                                    <select class="form-select" id="status" name="status" required>
                                        <option value="ativo" {{ usuario and usuario.status == 'ativo' ? 'selected' : '' }}>
                                            Ativo
                                        </option>
                                        <option value="inativo" {{ usuario and usuario.status == 'inativo' ? 'selected' : '' }}>
                                            Inativo
                                        </option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Por favor, selecione o status.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Informações Adicionais -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="telefone" class="form-label">Telefone</label>
                                    <input type="tel" class="form-control" id="telefone" name="telefone" 
                                           value="{{ usuario ? usuario.telefone : '' }}"
                                           placeholder="(00) 00000-0000">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="cpf" class="form-label">CPF</label>
                                    <input type="text" class="form-control" id="cpf" name="cpf" 
                                           value="{{ usuario ? usuario.cpf : '' }}"
                                           placeholder="000.000.000-00">
                                </div>
                            </div>
                        </div>

                        <!-- Endereço -->
                        <div class="mb-3">
                            <label for="endereco" class="form-label">Endereço</label>
                            <textarea class="form-control" id="endereco" name="endereco" rows="3" 
                                      placeholder="Digite o endereço completo">{{ usuario ? usuario.endereco : '' }}</textarea>
                        </div>

                        <!-- Observações -->
                        <div class="mb-3">
                            <label for="observacoes" class="form-label">Observações</label>
                            <textarea class="form-control" id="observacoes" name="observacoes" rows="3" 
                                      placeholder="Observações sobre o usuário">{{ usuario ? usuario.observacoes : '' }}</textarea>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex justify-content-between">
                            <a href="{{ url('admin.usuarios') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <div>
                                <button type="button" class="btn btn-outline-info me-2" onclick="testarEmail()">
                                    <i class="bi bi-envelope"></i> Testar Email
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Salvar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmação -->
<div class="modal fade" id="modalConfirmacao" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Ação</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="mensagemConfirmacao"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnConfirmar">Confirmar</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
