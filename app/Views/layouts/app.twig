<!DOCTYPE html>
<html lang="{{ app_locale|default('pt_BR') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ app_name|default('FramePhp') }}{% endblock %}</title>
    <link rel="stylesheet" href="{{ base_url('assets/css/style.css') }}">
    {% block styles %}{% endblock %}
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <a href="{{ base_url() }}">{{ app_name|default('FramePhp') }}</a>
            </div>
            <ul>
                <li><a href="{{ base_url() }}">Home</a></li>
                {% if auth() %}
                    <li><a href="{{ base_url('dashboard') }}">Dashboard</a></li>
                    <li><a href="{{ base_url('logout') }}">Sair</a></li>
                {% else %}
                    <li><a href="{{ base_url('login') }}">Login</a></li>
                    <li><a href="{{ base_url('register') }}">Registrar</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>

    <main>
        {% block content %}{% endblock %}
    </main>

    <footer>
        <p>&copy; {{ "now"|date("Y") }} {{ app_name|default('FramePhp') }}. Todos os direitos reservados.</p>
    </footer>

    {% block scripts %}{% endblock %}
</body>
</html>