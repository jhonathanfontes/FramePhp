{% extends "loja/layouts/base.html.twig" %}

{% block title %}Home - {{ empresa.nome_fantasia|default('Loja Online') }}{% endblock %}

{% block content %}
    <!-- Hero Section -->
    <section class="hero-section mb-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-primary mb-3">
                    Bem-vindo à {{ empresa.nome_fantasia|default('Loja Online') }}
                </h1>
                <p class="lead text-muted mb-4">
                    Descubra nossos produtos de qualidade com os melhores preços do mercado!
                </p>
                <div class="d-flex gap-3">
                    <a href="{{ url('loja.produtos') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-shopping-bag me-2"></i>Ver Produtos
                    </a>
                    <a href="{{ url('loja.categoria', {id: 'destaques'}) }}" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-star me-2"></i>Destaques
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="/assets/images/hero-image.jpg" alt="Produtos em destaque" class="img-fluid rounded shadow">
            </div>
        </div>
    </section>

    <!-- Carousel de Novidades -->
    {% if novidades %}
        <section class="mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 text-primary">
                    <i class="fas fa-fire me-2"></i>Novidades
                </h2>
                <a href="{{ url('loja.produtos') }}" class="btn btn-outline-primary">
                    Ver Todos <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            
            <div id="carouselNovidades" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    {% for item in novidades %}
                        <button type="button" data-bs-target="#carouselNovidades" data-bs-slide-to="{{ loop.index0 }}" 
                                class="{{ loop.first ? 'active' : '' }}" aria-current="{{ loop.first ? 'true' : 'false' }}" 
                                aria-label="Slide {{ loop.index }}"></button>
                    {% endfor %}
                </div>
                
                <div class="carousel-inner">
                    {% for item in novidades %}
                        <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <img src="{{ item.imagem }}" class="d-block w-100 rounded" alt="{{ item.nome }}">
                                </div>
                                <div class="col-md-6">
                                    <div class="carousel-caption text-start text-dark">
                                        <h3 class="fw-bold">{{ item.nome }}</h3>
                                        <p class="lead">{{ item.descricao|default('Produto incrível com qualidade garantida') }}</p>
                                        <div class="d-flex align-items-center gap-3 mb-3">
                                            <span class="h4 text-primary fw-bold">R$ {{ "%.2f"|format(item.preco) }}</span>
                                            {% if item.preco_promocional %}
                                                <span class="text-muted text-decoration-line-through">
                                                    R$ {{ "%.2f"|format(item.preco_promocional) }}
                                                </span>
                                            {% endif %}
                                        </div>
                                        <div class="d-flex gap-2">
                                            <a href="{{ url('loja.produto', {id: item.id}) }}" class="btn btn-primary">
                                                <i class="fas fa-eye me-1"></i>Ver Detalhes
                                            </a>
                                            <button onclick="adicionarAoCarrinho({{ item.id }})" class="btn btn-success">
                                                <i class="fas fa-shopping-cart me-1"></i>Comprar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselNovidades" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselNovidades" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Próximo</span>
                </button>
            </div>
        </section>
    {% endif %}

    <!-- Categorias em Destaque -->
    {% if categorias %}
        <section class="mb-5">
            <h2 class="h3 text-primary mb-4">
                <i class="fas fa-th-large me-2"></i>Categorias
            </h2>
            <div class="row g-4">
                {% for categoria in categorias|slice(0, 6) %}
                    <div class="col-md-4 col-lg-2">
                        <div class="card h-100 text-center border-0 shadow-sm hover-lift">
                            <div class="card-body">
                                {% if categoria.imagem %}
                                    <img src="{{ categoria.imagem }}" alt="{{ categoria.nome }}" 
                                         class="img-fluid mb-3" style="height: 80px; object-fit: cover;">
                                {% else %}
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                                         style="width: 80px; height: 80px;">
                                        <i class="fas fa-box fa-2x text-primary"></i>
                                    </div>
                                {% endif %}
                                <h6 class="card-title">{{ categoria.nome }}</h6>
                                <a href="{{ url('loja.categoria', {id: categoria.id}) }}" class="btn btn-sm btn-outline-primary">
                                    Ver Produtos
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endif %}

    <!-- Produtos em Destaque -->
    {% if produtos %}
        <section class="mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 text-primary">
                    <i class="fas fa-star me-2"></i>Produtos em Destaque
                </h2>
                <a href="{{ url('loja.produtos') }}" class="btn btn-outline-primary">
                    Ver Todos <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            
            <div class="row g-4">
                {% for produto in produtos|slice(0, 8) %}
                    <div class="col-md-6 col-lg-3">
                        <div class="card h-100 border-0 shadow-sm hover-lift">
                            <div class="position-relative">
                                {% if produto.imagem %}
                                    <img src="{{ produto.imagem }}" class="card-img-top" alt="{{ produto.nome }}" 
                                         style="height: 200px; object-fit: cover;">
                                {% else %}
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                         style="height: 200px;">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                {% endif %}
                                
                                <!-- Badge de Promoção -->
                                {% if produto.preco_promocional %}
                                    <span class="position-absolute top-0 start-0 badge bg-danger m-2">
                                        <i class="fas fa-percentage me-1"></i>Promoção
                                    </span>
                                {% endif %}
                                
                                <!-- Botão Favorito -->
                                <button class="btn btn-sm btn-light position-absolute top-0 end-0 m-2" 
                                        onclick="toggleFavorito({{ produto.id }})" title="Adicionar aos favoritos">
                                    <i class="far fa-heart"></i>
                                </button>
                            </div>
                            
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title">{{ produto.nome }}</h6>
                                <p class="card-text text-muted small flex-grow-1">
                                    {{ produto.descricao|slice(0, 80) }}{% if produto.descricao|length > 80 %}...{% endif %}
                                </p>
                                
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <span class="h6 text-primary fw-bold">R$ {{ "%.2f"|format(produto.preco) }}</span>
                                        {% if produto.preco_promocional %}
                                            <br><small class="text-muted text-decoration-line-through">
                                                R$ {{ "%.2f"|format(produto.preco_promocional) }}
                                            </small>
                                        {% endif %}
                                    </div>
                                    {% if produto.avaliacao %}
                                        <div class="text-warning">
                                            <i class="fas fa-star"></i>
                                            <small>{{ produto.avaliacao|number_format(1) }}</small>
                                        </div>
                                    {% endif %}
                                </div>
                                
                                <div class="d-flex gap-2">
                                    <a href="{{ url('loja.produto', {id: produto.id}) }}" class="btn btn-outline-primary flex-fill">
                                        <i class="fas fa-eye me-1"></i>Ver
                                    </a>
                                    <button onclick="adicionarAoCarrinho({{ produto.id }})" class="btn btn-primary">
                                        <i class="fas fa-shopping-cart"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endif %}

    <!-- Seção de Benefícios -->
    <section class="bg-light py-5 rounded">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="mb-3">
                    <i class="fas fa-shipping-fast fa-3x text-primary"></i>
                </div>
                <h5>Entrega Rápida</h5>
                <p class="text-muted">Entrega em até 24h em toda região</p>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <i class="fas fa-shield-alt fa-3x text-primary"></i>
                </div>
                <h5>Compra Segura</h5>
                <p class="text-muted">Site 100% seguro e protegido</p>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <i class="fas fa-undo fa-3x text-primary"></i>
                </div>
                <h5>Devolução Grátis</h5>
                <p class="text-muted">30 dias para troca ou devolução</p>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <i class="fas fa-headset fa-3x text-primary"></i>
                </div>
                <h5>Suporte 24h</h5>
                <p class="text-muted">Atendimento disponível 24 horas</p>
            </div>
        </div>
    </section>
{% endblock %}

{% block page_js %}
<script>
function adicionarAoCarrinho(produtoId) {
    fetch('/loja/carrinho/adicionar', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-CSRF-TOKEN': window.APP_CONFIG.csrf_token
        },
        body: JSON.stringify({
            produto_id: produtoId,
            quantidade: 1
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Atualizar contador do carrinho
            document.getElementById('cart-count').textContent = data.total_itens;
            
            // Mostrar mensagem de sucesso
            const alert = document.createElement('div');
            alert.className = 'alert alert-success alert-dismissible fade show';
            alert.innerHTML = `
                <i class="fas fa-check me-2"></i>Produto adicionado ao carrinho!
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.querySelector('main').insertBefore(alert, document.querySelector('main').firstChild);
        }
    })
    .catch(error => {
        console.error('Erro ao adicionar ao carrinho:', error);
    });
}

function toggleFavorito(produtoId) {
    // Implementar lógica de favoritos
    console.log('Toggle favorito:', produtoId);
}
</script>
{% endblock %}
