<section class="hero">
    <div class="hero-content">
        <h1>{{ empresa.slogan|default('Bem-vindo à nossa loja') }}</h1>
        <p>{{ empresa.descricao_curta|default('Descubra produtos incríveis com qualidade e preços imbatíveis') }}</p>
        
        <div class="hero-buttons">
            <a href="{{ url('loja.produtos') }}" class="btn btn-primary btn-lg">
                <i class="icon-shopping-bag"></i>
                <span>Ver Produtos</span>
            </a>
            <a href="{{ url('loja.sobre') }}" class="btn btn-outline btn-lg">
                <i class="icon-info"></i>
                <span>Saiba Mais</span>
            </a>
        </div>
    </div>
    
    <!-- Hero Slider (opcional) -->
    {% if banners is defined and banners|length > 0 %}
        <div class="hero-slider">
            {% for banner in banners %}
                <div class="hero-slide" style="background-image: url('{{ banner.imagem }}')">
                    <div class="hero-slide-content">
                        <h2>{{ banner.titulo }}</h2>
                        <p>{{ banner.descricao }}</p>
                        {% if banner.link %}
                            <a href="{{ banner.link }}" class="btn btn-primary">{{ banner.texto_botao|default('Ver Mais') }}</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
            
            <!-- Controles do slider -->
            <button class="hero-control hero-prev" aria-label="Slide anterior">
                <i class="icon-chevron-left"></i>
            </button>
            <button class="hero-control hero-next" aria-label="Próximo slide">
                <i class="icon-chevron-right"></i>
            </button>
            
            <!-- Indicadores -->
            <div class="hero-indicators">
                {% for banner in banners %}
                    <button class="hero-indicator" data-slide="{{ loop.index0 }}" aria-label="Ir para slide {{ loop.index }}"></button>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</section> 