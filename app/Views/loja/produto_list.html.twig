{% extends "loja/layouts/base.html.twig" %}

{% block title %}{{ categoria.nome|default('Produtos') }} - {{ empresa.nome_fantasia|default('Loja Online') }}{% endblock %}

{% block content %}
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ url('loja.home') }}" class="text-decoration-none">
                    <i class="fas fa-home me-1"></i>Home
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ url('loja.produtos') }}" class="text-decoration-none">Produtos</a>
            </li>
            {% if categoria %}
                <li class="breadcrumb-item active" aria-current="page">{{ categoria.nome }}</li>
            {% endif %}
        </ol>
    </nav>

    <!-- Header da Categoria -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="h2 text-primary mb-2">
                {% if categoria %}
                    <i class="fas fa-tag me-2"></i>{{ categoria.nome }}
                {% else %}
                    <i class="fas fa-shopping-bag me-2"></i>Todos os Produtos
                {% endif %}
            </h1>
            {% if categoria and categoria.descricao %}
                <p class="text-muted mb-0">{{ categoria.descricao }}</p>
            {% endif %}
        </div>
        <div class="col-md-4 text-end">
            <div class="d-flex justify-content-end gap-2">
                <button class="btn btn-outline-secondary" onclick="toggleView('grid')" id="btnGrid">
                    <i class="fas fa-th"></i>
                </button>
                <button class="btn btn-outline-secondary" onclick="toggleView('list')" id="btnList">
                    <i class="fas fa-list"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Filtros e Ordenação -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="d-flex gap-3">
                <!-- Filtro por Preço -->
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-filter me-1"></i>Preço
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="?preco=0-50">Até R$ 50</a></li>
                        <li><a class="dropdown-item" href="?preco=50-100">R$ 50 - R$ 100</a></li>
                        <li><a class="dropdown-item" href="?preco=100-200">R$ 100 - R$ 200</a></li>
                        <li><a class="dropdown-item" href="?preco=200+">Acima de R$ 200</a></li>
                    </ul>
                </div>
                
                <!-- Filtro por Marca -->
                {% if marcas %}
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-tags me-1"></i>Marca
                        </button>
                        <ul class="dropdown-menu">
                            {% for marca in marcas %}
                                <li><a class="dropdown-item" href="?marca={{ marca.id }}">{{ marca.nome }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
                
                <!-- Filtro por Avaliação -->
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-star me-1"></i>Avaliação
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="?avaliacao=4+">4+ estrelas</a></li>
                        <li><a class="dropdown-item" href="?avaliacao=3+">3+ estrelas</a></li>
                        <li><a class="dropdown-item" href="?avaliacao=2+">2+ estrelas</a></li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="d-flex justify-content-end">
                <select class="form-select" onchange="ordenarProdutos(this.value)">
                    <option value="relevancia">Mais Relevantes</option>
                    <option value="preco_menor">Menor Preço</option>
                    <option value="preco_maior">Maior Preço</option>
                    <option value="nome_az">Nome A-Z</option>
                    <option value="nome_za">Nome Z-A</option>
                    <option value="avaliacao">Melhor Avaliados</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Resultados -->
    <div class="row mb-3">
        <div class="col-12">
            <p class="text-muted">
                <i class="fas fa-info-circle me-1"></i>
                Mostrando {{ produtos|length }} produto(s)
                {% if request.get('q') %}
                    para "{{ request.get('q') }}"
                {% endif %}
            </p>
        </div>
    </div>

    <!-- Grid de Produtos -->
    {% if produtos %}
        <div class="row g-4" id="produtosGrid">
            {% for produto in produtos %}
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card h-100 border-0 shadow-sm hover-lift">
                        <div class="position-relative">
                            {% if produto.imagem %}
                                <img src="{{ produto.imagem }}" class="card-img-top" alt="{{ produto.nome }}" 
                                     style="height: 200px; object-fit: cover;">
                            {% else %}
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                     style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            {% endif %}
                            
                            <!-- Badges -->
                            <div class="position-absolute top-0 start-0 m-2">
                                {% if produto.preco_promocional %}
                                    <span class="badge bg-danger">
                                        <i class="fas fa-percentage me-1"></i>Promoção
                                    </span>
                                {% endif %}
                                {% if produto.novo %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-star me-1"></i>Novo
                                    </span>
                                {% endif %}
                            </div>
                            
                            <!-- Botão Favorito -->
                            <button class="btn btn-sm btn-light position-absolute top-0 end-0 m-2" 
                                    onclick="toggleFavorito({{ produto.id }})" title="Adicionar aos favoritos">
                                <i class="far fa-heart"></i>
                            </button>
                        </div>
                        
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title">{{ produto.nome }}</h6>
                            <p class="card-text text-muted small flex-grow-1">
                                {{ produto.descricao|slice(0, 80) }}{% if produto.descricao|length > 80 %}...{% endif %}
                            </p>
                            
                            <!-- Preço e Avaliação -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <span class="h6 text-primary fw-bold">R$ {{ "%.2f"|format(produto.preco) }}</span>
                                    {% if produto.preco_promocional %}
                                        <br><small class="text-muted text-decoration-line-through">
                                            R$ {{ "%.2f"|format(produto.preco_promocional) }}
                                        </small>
                                    {% endif %}
                                </div>
                                {% if produto.avaliacao %}
                                    <div class="text-warning">
                                        <i class="fas fa-star"></i>
                                        <small>{{ produto.avaliacao|number_format(1) }}</small>
                                    </div>
                                {% endif %}
                            </div>
                            
                            <!-- Botões de Ação -->
                            <div class="d-flex gap-2">
                                <a href="{{ url('loja.produto', {id: produto.id}) }}" class="btn btn-outline-primary flex-fill">
                                    <i class="fas fa-eye me-1"></i>Ver
                                </a>
                                <button onclick="adicionarAoCarrinho({{ produto.id }})" class="btn btn-primary">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <!-- Lista de Produtos (visão alternativa) -->
        <div class="d-none" id="produtosList">
            {% for produto in produtos %}
                <div class="card mb-3 border-0 shadow-sm">
                    <div class="row g-0">
                        <div class="col-md-3">
                            {% if produto.imagem %}
                                <img src="{{ produto.imagem }}" class="img-fluid rounded-start" alt="{{ produto.nome }}" 
                                     style="height: 200px; object-fit: cover;">
                            {% else %}
                                <div class="bg-light d-flex align-items-center justify-content-center rounded-start" 
                                     style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-9">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h5 class="card-title">{{ produto.nome }}</h5>
                                        <p class="card-text">{{ produto.descricao }}</p>
                                        
                                        <!-- Especificações -->
                                        {% if produto.especificacoes %}
                                            <div class="mb-3">
                                                <small class="text-muted">
                                                    {% for espec in produto.especificacoes|slice(0, 3) %}
                                                        <span class="badge bg-light text-dark me-1">{{ espec }}</span>
                                                    {% endfor %}
                                                </small>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <div class="mb-3">
                                            <span class="h5 text-primary fw-bold">R$ {{ "%.2f"|format(produto.preco) }}</span>
                                            {% if produto.preco_promocional %}
                                                <br><small class="text-muted text-decoration-line-through">
                                                    R$ {{ "%.2f"|format(produto.preco_promocional) }}
                                                </small>
                                            {% endif %}
                                        </div>
                                        
                                        {% if produto.avaliacao %}
                                            <div class="text-warning mb-3">
                                                <i class="fas fa-star"></i>
                                                <small>{{ produto.avaliacao|number_format(1) }}</small>
                                            </div>
                                        {% endif %}
                                        
                                        <div class="d-flex gap-2">
                                            <a href="{{ url('loja.produto', {id: produto.id}) }}" class="btn btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>Ver Detalhes
                                            </a>
                                            <button onclick="adicionarAoCarrinho({{ produto.id }})" class="btn btn-primary">
                                                <i class="fas fa-shopping-cart me-1"></i>Comprar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <!-- Paginação -->
        {% if paginacao %}
            <nav aria-label="Navegação de páginas" class="mt-5">
                <ul class="pagination justify-content-center">
                    {% if paginacao.pagina_atual > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="?pagina={{ paginacao.pagina_atual - 1 }}">Anterior</a>
                        </li>
                    {% endif %}
                    
                    {% for pagina in paginacao.paginas %}
                        <li class="page-item {{ pagina == paginacao.pagina_atual ? 'active' : '' }}">
                            <a class="page-link" href="?pagina={{ pagina }}">{{ pagina }}</a>
                        </li>
                    {% endfor %}
                    
                    {% if paginacao.pagina_atual < paginacao.total_paginas %}
                        <li class="page-item">
                            <a class="page-link" href="?pagina={{ paginacao.pagina_atual + 1 }}">Próximo</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
        
    {% else %}
        <!-- Nenhum produto encontrado -->
        <div class="text-center py-5">
            <i class="fas fa-search fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Nenhum produto encontrado</h4>
            <p class="text-muted">Tente ajustar os filtros ou buscar por outro termo.</p>
            <a href="{{ url('loja.produtos') }}" class="btn btn-primary">
                <i class="fas fa-shopping-bag me-2"></i>Ver Todos os Produtos
            </a>
        </div>
    {% endif %}
{% endblock %}

{% block page_js %}
<script>
function toggleView(view) {
    const gridView = document.getElementById('produtosGrid');
    const listView = document.getElementById('produtosList');
    const btnGrid = document.getElementById('btnGrid');
    const btnList = document.getElementById('btnList');
    
    if (view === 'grid') {
        gridView.classList.remove('d-none');
        listView.classList.add('d-none');
        btnGrid.classList.add('active');
        btnList.classList.remove('active');
    } else {
        gridView.classList.add('d-none');
        listView.classList.remove('d-none');
        btnGrid.classList.remove('active');
        btnList.classList.add('active');
    }
}

function ordenarProdutos(ordenacao) {
    const url = new URL(window.location);
    url.searchParams.set('ordenacao', ordenacao);
    window.location.href = url.toString();
}

function adicionarAoCarrinho(produtoId) {
    fetch('/loja/carrinho/adicionar', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-CSRF-TOKEN': window.APP_CONFIG.csrf_token
        },
        body: JSON.stringify({
            produto_id: produtoId,
            quantidade: 1
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            document.getElementById('cart-count').textContent = data.total_itens;
            
            const alert = document.createElement('div');
            alert.className = 'alert alert-success alert-dismissible fade show';
            alert.innerHTML = `
                <i class="fas fa-check me-2"></i>Produto adicionado ao carrinho!
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.querySelector('main').insertBefore(alert, document.querySelector('main').firstChild);
        }
    })
    .catch(error => {
        console.error('Erro ao adicionar ao carrinho:', error);
    });
}

function toggleFavorito(produtoId) {
    console.log('Toggle favorito:', produtoId);
}
</script>
{% endblock %}
