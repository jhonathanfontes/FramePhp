<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ empresa.nome_fantasia|default('Loja Online') }}{% endblock %}</title>
    
    <!-- Meta tags SEO -->
    <meta name="description" content="{% block description %}{{ empresa.descricao|default('Loja online com os melhores produtos') }}{% endblock %}">
    <meta name="keywords" content="{% block keywords %}{{ empresa.palavras_chave|default('loja, produtos, online') }}{% endblock %}">
    <meta name="author" content="{{ empresa.nome_fantasia|default('Loja Online') }}">
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- CSS Personalizado -->
    <link rel="stylesheet" href="/assets/css/loja/styles.css">
    
    <!-- CSS Customizado -->
    <style>
        :root {
            --primary-color: {{ empresa.cor_primaria|default('#007bff') }};
            --secondary-color: {{ empresa.cor_secundaria|default('#6c757d') }};
            --accent-color: {{ empresa.cor_destaque|default('#28a745') }};
            --text-color: {{ empresa.cor_texto|default('#333') }};
            --bg-color: {{ empresa.cor_fundo|default('#f8f9fa') }};
            --font-family: {{ empresa.fonte|default('Segoe UI, Tahoma, Geneva, Verdana, sans-serif') }};
        }
    </style>
    
    {% block page_css %}{% endblock %}
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand fw-bold text-primary" href="{{ url('loja.home') }}">
                {% if empresa.logo %}
                    <img src="{{ empresa.logo }}" alt="{{ empresa.nome_fantasia }}" height="40">
                {% else %}
                    {{ empresa.nome_fantasia|default('Loja Online') }}
                {% endif %}
            </a>
            
            <!-- Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Menu de Navegação -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link {{ request.path == '/' ? 'active' : '' }}" href="{{ url('loja.home') }}">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    
                    <!-- Categorias -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-th-large me-1"></i>Categorias
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ url('loja.categoria', {id: 'feminino'}) }}">Feminino</a></li>
                            <li><a class="dropdown-item" href="{{ url('loja.categoria', {id: 'masculino'}) }}">Masculino</a></li>
                            <li><a class="dropdown-item" href="{{ url('loja.categoria', {id: 'infantil'}) }}">Infantil</a></li>
                            <li><a class="dropdown-item" href="{{ url('loja.categoria', {id: 'esportes'}) }}">Esportes</a></li>
                            <li><a class="dropdown-item" href="{{ url('loja.categoria', {id: 'acessorios'}) }}">Acessórios</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ url('loja.produtos') }}">Todos os Produtos</a></li>
                        </ul>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('loja.sobre') }}">
                            <i class="fas fa-info-circle me-1"></i>Sobre
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('loja.contato') }}">
                            <i class="fas fa-envelope me-1"></i>Contato
                        </a>
                    </li>
                </ul>
                
                <!-- Busca -->
                <form class="d-flex me-3" action="{{ url('loja.busca') }}" method="GET">
                    <div class="input-group">
                        <input class="form-control" type="search" name="q" placeholder="Buscar produtos..." 
                               value="{{ request.get('q') }}" aria-label="Buscar produtos">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
                
                <!-- Menu do Usuário -->
                <div class="d-flex align-items-center">
                    <!-- Carrinho -->
                    <a href="{{ url('loja.carrinho') }}" class="btn btn-outline-primary position-relative me-2">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cart-count">
                            {{ carrinho.total_itens|default(0) }}
                        </span>
                    </a>
                    
                    <!-- Usuário -->
                    {% if auth.check('loja') %}
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-1"></i>{{ auth.user().nome|default('Usuário') }}
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ url('loja.perfil') }}">
                                    <i class="fas fa-user me-2"></i>Meu Perfil
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url('loja.pedidos') }}">
                                    <i class="fas fa-box me-2"></i>Meus Pedidos
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url('loja.favoritos') }}">
                                    <i class="fas fa-heart me-2"></i>Favoritos
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="{{ url('loja.logout') }}">
                                    <i class="fas fa-sign-out-alt me-2"></i>Sair
                                </a></li>
                            </ul>
                        </div>
                    {% else %}
                        <div class="d-flex gap-2">
                            <a href="{{ url('loja.login') }}" class="btn btn-outline-primary">
                                <i class="fas fa-sign-in-alt me-1"></i>Entrar
                            </a>
                            <a href="{{ url('loja.cadastro') }}" class="btn btn-primary">
                                <i class="fas fa-user-plus me-1"></i>Cadastrar
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-4">
        <!-- Mensagens Flash -->
        {% if session.has('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ session.get('success') }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endif %}
        
        {% if session.has('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ session.get('error') }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endif %}
        
        <!-- Conteúdo da Página -->
        {% block content %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="text-primary">{{ empresa.nome_fantasia|default('Loja Online') }}</h5>
                    <p class="text-muted">{{ empresa.descricao|default('Sua loja online de confiança') }}</p>
                </div>
                <div class="col-md-4">
                    <h6>Links Úteis</h6>
                    <ul class="list-unstyled">
                        <li><a href="{{ url('loja.sobre') }}" class="text-decoration-none">Sobre Nós</a></li>
                        <li><a href="{{ url('loja.contato') }}" class="text-decoration-none">Contato</a></li>
                        <li><a href="#" class="text-decoration-none">Política de Privacidade</a></li>
                        <li><a href="#" class="text-decoration-none">Termos de Uso</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Redes Sociais</h6>
                    <div class="d-flex gap-2">
                        <a href="#" class="text-decoration-none"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-decoration-none"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-decoration-none"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-decoration-none"><i class="fab fa-youtube fa-lg"></i></a>
                    </div>
                </div>
            </div>
            <hr>
            <div class="text-center text-muted">
                <small>&copy; {{ "now"|date("Y") }} {{ empresa.nome_fantasia|default('Loja Online') }}. Todos os direitos reservados.</small>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- JavaScript Customizado -->
    <script>
        // Configurações globais
        window.APP_CONFIG = {
            empresa: {{ empresa|json_encode|raw }},
            user: {{ auth.user()|json_encode|raw }},
            routes: {
                home: '{{ url("loja.home") }}',
                produtos: '{{ url("loja.produtos") }}',
                carrinho: '{{ url("loja.carrinho") }}',
                checkout: '{{ url("loja.checkout") }}',
                login: '{{ url("loja.login") }}',
                perfil: '{{ url("loja.perfil") }}'
            },
            csrf_token: '{{ csrf_token() }}'
        };
    </script>
    
    {% block page_js %}{% endblock %}
</body>
</html> 