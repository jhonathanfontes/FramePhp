/* ===== CART PAGE ===== */
.cart-page {
    max-width: 1400px;
    margin: 0 auto;
}

.page-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
}

.page-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: var(--text-color);
    margin-bottom: var(--spacing-sm);
}

.page-subtitle {
    color: var(--text-light);
    font-size: 1.1rem;
}

/* ===== CART LAYOUT ===== */
.cart-layout {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: var(--spacing-lg);
    align-items: start;
}

/* ===== CART ITEMS ===== */
.cart-items {
    background: var(--bg-white);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow);
    overflow: hidden;
}

.cart-header {
    padding: var(--spacing-lg);
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.cart-header h2 {
    color: var(--text-color);
    font-size: 1.3rem;
}

.cart-count {
    background: var(--primary-color);
    color: var(--text-white);
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
}

.cart-list {
    padding: var(--spacing-lg);
}

.cart-item {
    display: grid;
    grid-template-columns: 100px 1fr auto;
    gap: var(--spacing-md);
    align-items: center;
    margin-bottom: var(--spacing-md);
    padding: var(--spacing-md);
}

.item-image {
    width: 100px;
    height: 100px;
    border-radius: var(--border-radius);
    overflow: hidden;
}

.item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.item-placeholder {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 2rem;
}

.item-details {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
}

.item-title {
    font-size: 1.1rem;
    font-weight: 600;
}

.item-title a {
    color: var(--text-color);
    text-decoration: none;
}

.item-title a:hover {
    color: var(--primary-color);
}

.item-code {
    color: var(--text-light);
    font-size: 0.9rem;
}

.item-price {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
}

.price-unit {
    color: var(--text-light);
    font-size: 0.9rem;
}

.price-total {
    font-weight: bold;
    color: var(--primary-color);
    font-size: 1.1rem;
}

.item-controls {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    align-items: center;
}

.quantity-controls {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    background: var(--bg-light);
    border-radius: var(--border-radius);
    padding: var(--spacing-xs);
}

.quantity-display {
    min-width: 40px;
    text-align: center;
    font-weight: bold;
    color: var(--text-color);
}

.cart-actions {
    padding: var(--spacing-lg);
    border-top: 1px solid var(--border-color);
    display: flex;
    gap: var(--spacing-sm);
    justify-content: space-between;
}

/* ===== CART SUMMARY ===== */
.cart-summary {
    position: sticky;
    top: 100px;
}

.summary-card {
    position: relative;
}

.summary-card h2 {
    margin-bottom: var(--spacing-lg);
    color: var(--text-color);
    font-size: 1.3rem;
}

.summary-items {
    margin-bottom: var(--spacing-lg);
}

.summary-item {
    display: flex;
    justify-content: space-between;
    padding: var(--spacing-sm) 0;
    border-bottom: 1px solid var(--border-color);
}

.summary-item.discount {
    color: #28a745;
    font-weight: 500;
}

.summary-total {
    display: flex;
    justify-content: space-between;
    padding: var(--spacing-md) 0;
    border-top: 2px solid var(--border-color);
    font-size: 1.3rem;
    font-weight: bold;
    color: var(--primary-color);
}

.coupon-section {
    margin: var(--spacing-lg) 0;
    padding: var(--spacing-md) 0;
    border-top: 1px solid var(--border-color);
}

.coupon-section h3 {
    margin-bottom: var(--spacing-sm);
    font-size: 1rem;
    color: var(--text-color);
}

.coupon-form {
    display: flex;
    gap: var(--spacing-xs);
}

.coupon-input {
    flex: 1;
    padding: var(--spacing-sm);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius);
    font-size: 0.9rem;
}

.coupon-input:focus {
    outline: 2px solid var(--primary-color);
    border-color: var(--primary-color);
}

.checkout-btn {
    width: 100%;
    margin: var(--spacing-md) 0;
    font-size: 1.1rem;
    padding: var(--spacing-md);
}

.cart-info {
    margin-top: var(--spacing-lg);
    padding-top: var(--spacing-md);
    border-top: 1px solid var(--border-color);
}

.cart-info h4 {
    margin-bottom: var(--spacing-sm);
    color: var(--text-color);
    font-size: 1rem;
}

.info-list {
    list-style: none;
    font-size: 0.9rem;
    color: var(--text-light);
}

.info-list li {
    margin-bottom: var(--spacing-xs);
}

/* ===== EMPTY CART ===== */
.empty-cart {
    text-align: center;
    padding: var(--spacing-xl) var(--spacing-lg);
    background: var(--bg-white);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow);
}

.empty-cart-icon {
    font-size: 4rem;
    margin-bottom: var(--spacing-md);
    opacity: 0.5;
}

.empty-cart h2 {
    color: var(--text-color);
    margin-bottom: var(--spacing-sm);
}

.empty-cart p {
    color: var(--text-light);
    margin-bottom: var(--spacing-lg);
}

/* ===== RESPONSIVIDADE ===== */
@media (max-width: 1024px) {
    .cart-layout {
        grid-template-columns: 1fr;
        gap: var(--spacing-md);
    }
    
    .cart-summary {
        position: static;
    }
}

@media (max-width: 768px) {
    .cart-item {
        grid-template-columns: 80px 1fr;
        gap: var(--spacing-sm);
    }
    
    .item-image {
        width: 80px;
        height: 80px;
    }
    
    .item-controls {
        grid-column: 1 / -1;
        flex-direction: row;
        justify-content: space-between;
        margin-top: var(--spacing-sm);
    }
    
    .cart-actions {
        flex-direction: column;
    }
    
    .coupon-form {
        flex-direction: column;
    }
}

@media (max-width: 480px) {
    .cart-item {
        grid-template-columns: 1fr;
        text-align: center;
    }
    
    .item-image {
        width: 100px;
        height: 100px;
        margin: 0 auto;
    }
    
    .item-controls {
        flex-direction: column;
        gap: var(--spacing-sm);
    }
}

/* ===== LOADING STATES ===== */
.btn.loading {
    opacity: 0.7;
    pointer-events: none;
}

/* ===== NOTIFICATIONS ===== */
.alert {
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    border-radius: var(--border-radius);
    border: 1px solid transparent;
}

.alert-success {
    color: #155724;
    background-color: #d4edda;
    border-color: #c3e6cb;
}

.alert-error {
    color: #721c24;
    background-color: #f8d7da;
    border-color: #f5c6cb;
}

.alert-warning {
    color: #856404;
    background-color: #fff3cd;
    border-color: #ffeaa7;
}

.alert-info {
    color: #0c5460;
    background-color: #d1ecf1;
    border-color: #bee5eb;
}
