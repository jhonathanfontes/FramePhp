    </div>

    <style>
        /* ===== ERROR PAGE ===== */
        .error-page {
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: var(--spacing-lg) 0;
        }
        
        .error-container {
            max-width: 800px;
            text-align: center;
            padding: var(--spacing-xl);
        }
        
        /* ===== ERROR ICON ===== */
        .error-icon {
            font-size: 8rem;
            margin-bottom: var(--spacing-lg);
            animation: bounce 2s infinite;
        }
        
        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-10px);
            }
            60% {
                transform: translateY(-5px);
            }
        }
        
        /* ===== ERROR TITLE ===== */
        .error-title {
            font-size: clamp(1.5rem, 4vw, 2.5rem);
            color: var(--text-color);
            margin-bottom: var(--spacing-sm);
        }
        
        /* ===== ERROR CODE ===== */
        .error-code {
            font-size: 4rem;
            font-weight: bold;
            color: var(--primary-color);
            margin-bottom: var(--spacing-lg);
            opacity: 0.8;
        }
        
        /* ===== ERROR MESSAGE ===== */
        .error-message {
            font-size: 1.2rem;
            color: var(--text-light);
            margin-bottom: var(--spacing-xl);
            line-height: 1.6;
        }
        
        /* ===== ERROR SUGGESTIONS ===== */
        .error-suggestions {
            background: var(--bg-white);
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow);
            padding: var(--spacing-lg);
            margin-bottom: var(--spacing-xl);
            text-align: left;
        }
        
        .error-suggestions h3 {
            color: var(--text-color);
            margin-bottom: var(--spacing-md);
            text-align: center;
        }
        
        .suggestions-list {
            list-style: none;
            padding: 0;
        }
        
        .suggestions-list li {
            padding: var(--spacing-sm) 0;
            color: var(--text-color);
            position: relative;
            padding-left: var(--spacing-lg);
        }
        
        .suggestions-list li::before {
            content: '‚Üí';
            position: absolute;
            left: 0;
            color: var(--primary-color);
            font-weight: bold;
        }
        
        /* ===== ERROR ACTIONS ===== */
        .error-actions {
            display: flex;
            gap: var(--spacing-md);
            justify-content: center;
            flex-wrap: wrap;
            margin-bottom: var(--spacing-xl);
        }
        
        /* ===== ERROR SEARCH ===== */
        .error-search {
            margin-bottom: var(--spacing-xl);
        }
        
        .error-search h3 {
            color: var(--text-color);
            margin-bottom: var(--spacing-md);
        }
        
        .search-box {
            display: flex;
            gap: var(--spacing-xs);
            max-width: 400px;
            margin: 0 auto;
        }
        
        .search-input {
            flex: 1;
            padding: var(--spacing-sm);
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius);
            font-size: 1rem;
        }
        
        .search-input:focus {
            outline: 2px solid var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .search-btn {
            padding: var(--spacing-sm) var(--spacing-md);
            background: var(--primary-color);
            color: var(--text-white);
            border: none;
            border-radius: var(--border-radius);
            cursor: pointer;
            font-size: 1rem;
        }
        
        .search-btn:hover {
            background: var(--secondary-color);
        }
        
        /* ===== USEFUL LINKS ===== */
        .useful-links {
            margin-bottom: var(--spacing-xl);
        }
        
        .useful-links h3 {
            color: var(--text-color);
            margin-bottom: var(--spacing-md);
        }
        
        .links-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: var(--spacing-md);
        }
        
        .link-card {
            background: var(--bg-white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: var(--spacing-md);
            text-decoration: none;
            color: var(--text-color);
            transition: var(--transition);
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: var(--spacing-xs);
        }
        
        .link-card:hover {
            box-shadow: var(--shadow-hover);
            transform: translateY(-2px);
            color: var(--primary-color);
        }
        
        .link-icon {
            font-size: 1.5rem;
        }
        
        .link-text {
            font-size: 0.9rem;
            font-weight: 500;
        }
        
        /* ===== ERROR DETAILS ===== */
        .error-details {
            background: var(--bg-light);
            border-radius: var(--border-radius);
            padding: var(--spacing-md);
            margin-top: var(--spacing-lg);
        }
        
        .error-details summary {
            cursor: pointer;
            color: var(--text-color);
            font-weight: 500;
            margin-bottom: var(--spacing-sm);
        }
        
        .debug-info {
            text-align: left;
            font-family: monospace;
            font-size: 0.9rem;
            color: var(--text-light);
        }
        
        .debug-info p {
            margin: var(--spacing-xs) 0;
        }
        
        /* ===== RESPONSIVIDADE ===== */
        @media (max-width: 768px) {
            .error-container {
                padding: var(--spacing-lg);
            }
            
            .error-icon {
                font-size: 6rem;
            }
            
            .error-code {
                font-size: 3rem;
            }
            
            .error-actions {
                flex-direction: column;
                align-items: center;
            }
            
            .links-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        
        @media (max-width: 480px) {
            .error-container {
                padding: var(--spacing-md);
            }
            
            .error-icon {
                font-size: 4rem;
            }
            
            .error-code {
                font-size: 2.5rem;
            }
            
            .links-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <script>
        // Buscar produto
        function buscarProduto() {
            const termo = document.getElementById('error-search').value.trim();
            if (termo) {
                window.location.href = `/produtos?busca=${encodeURIComponent(termo)}`;
            }
        }
        
        // Buscar ao pressionar Enter
        document.getElementById('error-search').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                buscarProduto();
            }
        });
        
        // Auto-focus na busca se existir
        const searchInput = document.getElementById('error-search');
        if (searchInput) {
            searchInput.focus();
        }
        
        // Relat√≥rio de erro (opcional)
        function reportarErro() {
            const dados = {
                error_code: '{{ error_code }}',
                error_message: '{{ error_message }}',
                url: window.location.href,
                user_agent: navigator.userAgent,
                timestamp: new Date().toISOString()
            };
            
            // Enviar relat√≥rio para o servidor
            fetch('/erro/reportar', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': '{{ csrf_token() }}'
                },
                body: JSON.stringify(dados)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    mostrarNotificacao('Relat√≥rio enviado com sucesso!', 'success');
                }
            })
            .catch(error => {
                console.error('Erro ao enviar relat√≥rio:', error);
            });
        }
        
        function mostrarNotificacao(mensagem, tipo) {
            const notificacao = document.createElement('div');
            notificacao.className = `alert alert-${tipo}`;
            notificacao.setAttribute('role', 'alert');
            notificacao.setAttribute('aria-live', 'polite');
            notificacao.textContent = mensagem;
            
            const container = document.querySelector('.container');
            container.insertBefore(notificacao, container.firstChild);
            
            setTimeout(() => {
                notificacao.remove();
            }, 5000);
        }
        
        // Adicionar bot√£o de relat√≥rio se for erro 500
        {% if error_code == '500' %}
            document.addEventListener('DOMContentLoaded', function() {
                const actions = document.querySelector('.error-actions');
                const reportBtn = document.createElement('button');
                reportBtn.className = 'btn btn-outline';
                reportBtn.textContent = 'üìä Reportar Erro';
                reportBtn.onclick = reportarErro;
                actions.appendChild(reportBtn);
            });
        {% endif %}
    </script>
{% endblock %} 