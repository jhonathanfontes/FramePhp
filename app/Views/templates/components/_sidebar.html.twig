{# templates/components/_sidebar.html.twig #}
<aside class="sidebar">
    <div class="sidebar-header has-text-centered">
        <h4 class="title is-5 has-text-white sidebar-title">{{ app_name | default('Admin App') }}</h4>
    </div>
    <nav class="sidebar-menu">
        <a href="/admin/dashboard" class="menu-item {% if current_path == '/admin/dashboard' %}is-active{% endif %}">
            <span class="icon is-small"><i class="fas fa-tachometer-alt"></i></span>
            <span class="menu-item-text">Dashboard</span>
        </a>
        <a href="/admin/users" class="menu-item {% if current_path == '/admin/users' %}is-active{% endif %}">
            <span class="icon is-small"><i class="fas fa-users"></i></span>
            <span class="menu-item-text">Usuários</span>
        </a>
        <a href="/admin/products" class="menu-item {% if current_path == '/admin/products' %}is-active{% endif %}">
            <span class="icon is-small"><i class="fas fa-box"></i></span>
            <span class="menu-item-text">Produtos</span>
        </a>
        <a href="/admin/orders" class="menu-item {% if current_path == '/admin/orders' %}is-active{% endif %}">
            <span class="icon is-small"><i class="fas fa-shopping-cart"></i></span>
            <span class="menu-item-text">Pedidos</span>
        </a>
        <a href="/admin/reports" class="menu-item {% if current_path == '/admin/reports' %}is-active{% endif %}">
            <span class="icon is-small"><i class="fas fa-chart-bar"></i></span>
            <span class="menu-item-text">Relatórios</span>
        </a>
        <a href="/admin/settings" class="menu-item {% if current_path == '/admin/settings' %}is-active{% endif %}">
            <span class="icon is-small"><i class="fas fa-cog"></i></span>
            <span class="menu-item-text">Configurações</span>
        </a>
    </nav>
</aside>