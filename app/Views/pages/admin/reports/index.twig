
{% extends 'layouts/admin.html.twig' %}

{% block title %}Relatórios{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-chart-bar"></i>
                        Relatórios do Sistema
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Relatório de Vendas -->
                        <div class="col-md-6 col-lg-3 mb-4">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <i class="fas fa-shopping-cart fa-3x text-primary mb-3"></i>
                                    <h5 class="card-title">Vendas</h5>
                                    <p class="card-text">Relatório detalhado de vendas por período</p>
                                    <button class="btn btn-primary" onclick="openReportModal('vendas')">
                                        <i class="fas fa-file-pdf"></i> Gerar
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Relatório de Produtos -->
                        <div class="col-md-6 col-lg-3 mb-4">
                            <div class="card border-success">
                                <div class="card-body text-center">
                                    <i class="fas fa-box fa-3x text-success mb-3"></i>
                                    <h5 class="card-title">Produtos</h5>
                                    <p class="card-text">Listagem completa de produtos (Paisagem)</p>
                                    <button class="btn btn-success" onclick="openReportModal('produtos')">
                                        <i class="fas fa-file-pdf"></i> Gerar
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Relatório Financeiro -->
                        <div class="col-md-6 col-lg-3 mb-4">
                            <div class="card border-warning">
                                <div class="card-body text-center">
                                    <i class="fas fa-dollar-sign fa-3x text-warning mb-3"></i>
                                    <h5 class="card-title">Financeiro</h5>
                                    <p class="card-text">Resumo financeiro e receitas</p>
                                    <button class="btn btn-warning" onclick="openReportModal('financeiro')">
                                        <i class="fas fa-file-pdf"></i> Gerar
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Relatório de Empresas -->
                        <div class="col-md-6 col-lg-3 mb-4">
                            <div class="card border-info">
                                <div class="card-body text-center">
                                    <i class="fas fa-building fa-3x text-info mb-3"></i>
                                    <h5 class="card-title">Empresas</h5>
                                    <p class="card-text">Listagem de empresas (Paisagem)</p>
                                    <button class="btn btn-info" onclick="openReportModal('empresas')">
                                        <i class="fas fa-file-pdf"></i> Gerar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para parâmetros do relatório -->
<div class="modal fade" id="reportModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Parâmetros do Relatório</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="reportForm" method="GET" target="_blank">
                <div class="modal-body">
                    <div id="parametros-container">
                        <!-- Parâmetros serão inseridos aqui via JavaScript -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-file-pdf"></i> Gerar Relatório
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
function openReportModal(tipo) {
    const modal = new bootstrap.Modal(document.getElementById('reportModal'));
    const form = document.getElementById('reportForm');
    const container = document.getElementById('parametros-container');
    
    // Definir ação do formulário
    form.action = `/admin/reports/${tipo}`;
    
    // Limpar parâmetros anteriores
    container.innerHTML = '';
    
    // Adicionar parâmetros específicos por tipo
    switch(tipo) {
        case 'vendas':
        case 'financeiro':
            container.innerHTML = `
                <div class="mb-3">
                    <label class="form-label">Data Início</label>
                    <input type="date" name="data_inicio" class="form-control" value="${new Date().toISOString().split('T')[0].slice(0, 8)}01" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Data Fim</label>
                    <input type="date" name="data_fim" class="form-control" value="${new Date().toISOString().split('T')[0]}" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Empresa (Opcional)</label>
                    <select name="empresa_id" class="form-select">
                        <option value="">Todas as empresas</option>
                        <!-- Carregar empresas via AJAX se necessário -->
                    </select>
                </div>
            `;
            break;
        case 'produtos':
            container.innerHTML = `
                <div class="mb-3">
                    <label class="form-label">Empresa (Opcional)</label>
                    <select name="empresa_id" class="form-select">
                        <option value="">Todas as empresas</option>
                        <!-- Carregar empresas via AJAX se necessário -->
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Categoria (Opcional)</label>
                    <select name="categoria" class="form-select">
                        <option value="">Todas as categorias</option>
                        <!-- Carregar categorias via AJAX se necessário -->
                    </select>
                </div>
            `;
            break;
        case 'empresas':
            container.innerHTML = `
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    Este relatório não requer parâmetros adicionais.
                </div>
            `;
            break;
    }
    
    modal.show();
}
</script>
{% endblock %}
