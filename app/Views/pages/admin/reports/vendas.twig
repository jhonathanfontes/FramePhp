{% extends "layouts/reports.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="report-header d-flex justify-content-between align-items-center">
    <div>
        <h2>{{ title }}</h2>
        <p class="report-period">{{ period }}</p>
        {% if company %}
            <p class="report-company">{{ company.nome_fantasia }}</p>
        {% endif %}
    </div>
    <div class="report-actions">
        <a href="?format=pdf&data_inicio={{ data_inicio }}&data_fim={{ data_fim }}{% if company %}&empresa_id={{ company.id }}{% endif %}" 
           class="btn btn-danger" target="_blank">
            <i class="fas fa-file-pdf"></i> {{ __('reports.export_pdf') }}
        </a>
        <a href="/admin/reports" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> {{ __('system.back') }}
        </a>
    </div>
</div>
{% endblock %}