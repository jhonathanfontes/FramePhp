{% extends 'layouts/auth.twig' %}

{% block title %}{{ __('login') }}{% endblock %}

{% block content %}
<div class="auth-container">
    <div class="auth-card">
        <h2>{{ __('login') }}</h2>
        
        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}
        
        <form method="POST" action="{{ base_url('auth/login') }}">
            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
            
            <div class="form-group">
                <label for="email">{{ __('email') }}</label>
                <input type="email" name="email" id="email" class="form-control" value="{{ old.email }}" required>
            </div>
            
            <div class="form-group">
                <label for="password">{{ __('password') }}</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>
            
            <div class="form-check">
                <input type="checkbox" name="remember" id="remember" class="form-check-input">
                <label for="remember" class="form-check-label">{{ __('remember_me') }}</label>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">{{ __('login') }}</button>
            </div>
            
            <div class="auth-links">
                <p><a href="{{ base_url('forgot-password') }}">{{ __('forgot_password') }}</a></p>
                <p>{{ __('dont_have_account') }} <a href="{{ base_url('register') }}">{{ __('register') }}</a></p>
            </div>
        </form>
    </div>
</div>
{% endblock %}