{% extends 'layouts/painel.html.twig' %}

{% block title %}Dashboard - Painel Administrativo{% endblock %}
{% block page_title %}Dashboard{% endblock %}

{% block content %}
<div class="row">
    <!-- Cards de Estatísticas -->
    <div class="col-12 mb-4">
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Total de Empresas 1
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ estatisticas.total_empresas ?? 0 }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-building fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Total de Usuários
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ estatisticas.total_usuarios ?? 0 }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Estabelecimentos
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ estatisticas.total_estabelecimentos ?? 0 }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-store fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Atividades Hoje
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ estatisticas.atividades_hoje ?? 0 }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos e Análises -->
    <div class="col-12 mb-4">
        <div class="row">
            <!-- Gráfico de Empresas por Porte -->
            <div class="col-xl-8 col-lg-7">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Empresas por Porte</h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in">
                                <a class="dropdown-item" href="#">Exportar</a>
                                <a class="dropdown-item" href="#">Imprimir</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Mais detalhes</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="chart-area">
                            <canvas id="empresasPorteChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Gráfico de Empresas por Estado -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Empresas por Estado</h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink2" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in">
                                <a class="dropdown-item" href="#">Exportar</a>
                                <a class="dropdown-item" href="#">Imprimir</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Mais detalhes</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="chart-pie pt-4 pb-2">
                            <canvas id="empresasEstadoChart"></canvas>
                        </div>
                        <div class="mt-4 text-center small">
                            <span class="mr-2">
                                <i class="fas fa-circle text-primary"></i> SP
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-circle text-success"></i> RJ
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-circle text-info"></i> MG
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabelas de Dados Recentes -->
    <div class="col-12 mb-4">
        <div class="row">
            <!-- Empresas Recentes -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Empresas Recentes</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Razão Social</th>
                                        <th>CNPJ</th>
                                        <th>Data</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if empresas_recentes %}
                                        {% for empresa in empresas_recentes %}
                                        <tr>
                                            <td>
                                                <a href="/painel/empresas/{{ empresa.id }}" class="text-decoration-none">
                                                    {{ empresa.razao_social|length > 30 ? empresa.razao_social|slice(0, 30) ~ '...' : empresa.razao_social }}
                                                </a>
                                            </td>
                                            <td>{{ empresa.cnpj_raiz }}</td>
                                            <td>{{ empresa.created_at|date('d/m/Y') }}</td>
                                            <td>
                                                <span class="badge bg-{{ empresa.status == 'ativo' ? 'success' : 'secondary' }}">
                                                    {{ empresa.status|title }}
                                                </span>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center text-muted">
                                                Nenhuma empresa cadastrada recentemente
                                            </td>
                                        </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="/painel/empresas" class="btn btn-primary btn-sm">
                                Ver Todas as Empresas
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Usuários Recentes -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Usuários Recentes</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>E-mail</th>
                                        <th>Data</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if usuarios_recentes %}
                                        {% for usuario in usuarios_recentes %}
                                        <tr>
                                            <td>
                                                <a href="/painel/usuarios/{{ usuario.id }}" class="text-decoration-none">
                                                    {{ usuario.nome|length > 20 ? usuario.nome|slice(0, 20) ~ '...' : usuario.nome }}
                                                </a>
                                            </td>
                                            <td>{{ usuario.email }}</td>
                                            <td>{{ usuario.created_at|date('d/m/Y') }}</td>
                                            <td>
                                                <span class="badge bg-{{ usuario.status == 'ativo' ? 'success' : 'secondary' }}">
                                                    {{ usuario.status|title }}
                                                </span>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center text-muted">
                                                Nenhum usuário cadastrado recentemente
                                            </td>
                                        </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="/painel/usuarios" class="btn btn-primary btn-sm">
                                Ver Todos os Usuários
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Atividades do Sistema -->
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Atividades Recentes do Sistema</h6>
            </div>
            <div class="card-body">
                <div class="timeline">
                    {% if atividades_recentes %}
                        {% for atividade in atividades_recentes %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-{{ atividade.tipo == 'criacao' ? 'success' : (atividade.tipo == 'edicao' ? 'info' : 'warning') }}"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">{{ atividade.titulo }}</h6>
                                <p class="timeline-text">{{ atividade.descricao }}</p>
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    {{ atividade.created_at|date('d/m/Y H:i') }}
                                    {% if atividade.usuario %}
                                        por {{ atividade.usuario.nome }}
                                    {% endif %}
                                </small>
                            </div>
                        </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-info-circle fa-2x mb-3"></i>
                            <p>Nenhuma atividade registrada recentemente</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts para os gráficos -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gráfico de Empresas por Porte (Área)
    const ctxArea = document.getElementById('empresasPorteChart').getContext('2d');
    new Chart(ctxArea, {
        type: 'line',
        data: {
            labels: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun'],
            datasets: [{
                label: 'Micro Empresas',
                data: [12, 19, 15, 25, 22, 30],
                borderColor: 'rgb(75, 192, 192)',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                tension: 0.1
            }, {
                label: 'Pequenas Empresas',
                data: [8, 12, 18, 22, 28, 35],
                borderColor: 'rgb(255, 99, 132)',
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                tension: 0.1
            }, {
                label: 'Médias Empresas',
                data: [5, 8, 12, 15, 18, 22],
                borderColor: 'rgb(255, 205, 86)',
                backgroundColor: 'rgba(255, 205, 86, 0.2)',
                tension: 0.1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top',
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Gráfico de Empresas por Estado (Pizza)
    const ctxPie = document.getElementById('empresasEstadoChart').getContext('2d');
    new Chart(ctxPie, {
        type: 'doughnut',
        data: {
            labels: ['São Paulo', 'Rio de Janeiro', 'Minas Gerais', 'Rio Grande do Sul', 'Paraná'],
            datasets: [{
                data: [35, 25, 20, 12, 8],
                backgroundColor: [
                    '#4e73df',
                    '#1cc88a',
                    '#36b9cc',
                    '#f6c23e',
                    '#e74a3b'
                ],
                hoverBackgroundColor: [
                    '#2e59d9',
                    '#17a673',
                    '#2c9faf',
                    '#f4b619',
                    '#e02424'
                ],
                hoverBorderColor: "rgba(234, 236, 244, 1)",
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            cutout: '70%'
        }
    });
});
</script>

<style>
.border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
}

.border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
}

.border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
}

.border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
}

.text-gray-300 {
    color: #dddfeb !important;
}

.text-gray-800 {
    color: #5a5c69 !important;
}

.chart-area {
    position: relative;
    height: 20rem;
    width: 100%;
}

.chart-pie {
    position: relative;
    height: 15rem;
    width: 100%;
}

.timeline {
    position: relative;
    padding: 20px 0;
}

.timeline-item {
    position: relative;
    padding-left: 40px;
    margin-bottom: 20px;
}

.timeline-marker {
    position: absolute;
    left: 0;
    top: 0;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 0 0 0 3px #e3e6f0;
}

.timeline-content {
    background: #f8f9fc;
    padding: 15px;
    border-radius: 8px;
    border-left: 3px solid #4e73df;
}

.timeline-title {
    margin: 0 0 5px 0;
    font-size: 14px;
    font-weight: 600;
    color: #5a5c69;
}

.timeline-text {
    margin: 0 0 10px 0;
    font-size: 13px;
    color: #858796;
}

.card {
    border: none;
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}

.card-header {
    background-color: #f8f9fc;
    border-bottom: 1px solid #e3e6f0;
}

.dropdown-toggle::after {
    display: none;
}

.table th {
    border-top: none;
    font-weight: 600;
    color: #5a5c69;
    background-color: #f8f9fc;
}

.badge {
    font-size: 0.75em;
}

.btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}
</style>
{% endblock %} 